<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context="com.farolito.meseros.meserosfarolito.WaitlistFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/veryLight_green"
            android:src="@drawable/logo"
            android:tint="@color/lighter_green"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/waitlist_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_margin="8dp" />

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/veryLight_green"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <android.support.constraint.Guideline
            android:id="@+id/waitlist_guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

        <android.support.constraint.Guideline
            android:id="@+id/waitlist_guideline2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

        <android.support.constraint.Guideline
            android:id="@+id/waitlist_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="3"
            android:rowCount="4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/waitlist_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp">

            <Button
                android:id="@+id/addClient_btn_7"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="7"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_8"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="8"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_9"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="9"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_4"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="4"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_5"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="5"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_6"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="6"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_1"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="1"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_2"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="2"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_3"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <ImageButton
                android:id="@+id/addClient_btn_backspace"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/ic_backspace_black_24dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/addClient_btn_0"
                android:layout_gravity="fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
            <ImageButton
                android:id="@+id/addClient_btn_done"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:src="@drawable/ic_check_black_24dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"/>
        </GridLayout>

        <TextView
            android:id="@+id/addClient_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/add_client"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/waitlist_guideline"
            app:layout_constraintTop_toBottomOf="@id/addClient_title">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:hint="@string/client_name"
                app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/client_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/static_count_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:hint="@string/client_count"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                <EditText
                    android:id="@+id/count_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:paddingRight="12dp"
                    android:paddingEnd="12dp"
                    tools:text="0"
                    android:inputType="number"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/waitlist_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_add_black_24dp"/>

</LinearLayout>
